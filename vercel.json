{
  "outputDirectory": ".",
  "rewrites": [
    {
      "source": "/",
      "destination": "/blog/index.html"
    },
    {
      "source": "/admin",
      "destination": "/blog-admin/index.html"
    },
    {
      "source": "/blog",
      "destination": "/blog/index.html"
    },
    {
      "source": "/blog/pages/(.*)",
      "destination": "/blog/pages/$1"
    },
    {
      "source": "/apps",
      "destination": "/blog/pages/apps.html"
    },
    {
      "source": "/about",
      "destination": "/blog/pages/about.html"
    },
    {
      "source": "/gallery",
      "destination": "/blog/pages/gallery.html"
    },
    {
      "source": "/categories",
      "destination": "/blog/pages/categories.html"
    },
    {
      "source": "/tags",
      "destination": "/blog/pages/tags.html"
    },
    {
      "source": "/timeline",
      "destination": "/blog/pages/timeline.html"
    },
    {
      "source": "/guestbook",
      "destination": "/blog/pages/guestbook.html"
    },
    {
      "source": "/links",
      "destination": "/blog/pages/links.html"
    },
    {
      "source": "/search",
      "destination": "/blog/pages/search.html"
    },
    {
      "source": "/article",
      "destination": "/blog/pages/article.html"
    },
    {
      "source": "/css/(.*)",
      "destination": "/blog/css/$1"
    },
    {
      "source": "/js/(.*)",
      "destination": "/blog/js/$1"
    },
    {
      "source": "/images/(.*)",
      "destination": "/blog/images/$1"
    },
    {
      "source": "/blog-admin/css/(.*)",
      "destination": "/blog-admin/css/$1"
    },
    {
      "source": "/blog-admin/js/(.*)",
      "destination": "/blog-admin/js/$1"
    },
    {
      "source": "/blog-admin/images/(.*)",
      "destination": "/blog-admin/images/$1"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/uploads/$1"
    },
    {
      "source": "/data/(.*)",
      "destination": "/data/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
